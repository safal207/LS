{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "hcp.schema.json",
  "title": "HCP Envelope",
  "type": "object",
  "required": ["hcp", "msg_id", "type", "timestamp", "sender", "receiver", "state", "payload"],
  "properties": {
    "hcp": { "const": "1.0" },
    "msg_id": { "type": "string", "format": "uuid" },
    "type": {
      "type": "string",
      "enum": [
        "HCP_HELLO",
        "HCP_INTENT",
        "HCP_CONTEXT",
        "HCP_DECISION",
        "HCP_FEEDBACK",
        "HCP_STATE_UPDATE"
      ]
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "sender": {
      "type": "object",
      "required": ["agent_id", "fingerprint"],
      "properties": {
        "agent_id": { "type": "string" },
        "fingerprint": { "type": "string" }
      }
    },
    "receiver": {
      "type": "object",
      "required": ["agent_id", "fingerprint"],
      "properties": {
        "agent_id": { "type": "string" },
        "fingerprint": { "type": "string" }
      }
    },
    "state": {
      "type": "object",
      "required": ["human"],
      "properties": {
        "human": {
          "type": "object",
          "required": ["presence", "affect", "clarity", "pressure", "intent", "consent"],
          "properties": {
            "presence": { "type": "string" },
            "affect": { "type": "string" },
            "clarity": { "type": "integer", "minimum": 0, "maximum": 100 },
            "pressure": { "type": "integer", "minimum": 0, "maximum": 100 },
            "intent": { "type": "string" },
            "consent": { "type": "string" }
          }
        }
      }
    },
    "payload": { "type": "object" },
    "sign": {
      "type": "object",
      "properties": {
        "algo": { "type": "string" },
        "signature": { "type": "string" }
      }
    }
  }
}
