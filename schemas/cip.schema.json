{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "cip.schema.json",
  "title": "CIP Envelope",
  "type": "object",
  "required": ["cip", "msg_id", "type", "timestamp", "sender", "receiver", "payload"],
  "properties": {
    "cip": { "const": "1.0" },
    "msg_id": { "type": "string", "format": "uuid" },
    "type": {
      "type": "string",
      "enum": [
        "HELLO",
        "INTENT",
        "FACT_PROPOSE",
        "FACT_CHALLENGE",
        "FACT_CONFIRM",
        "FACT_REJECT",
        "DECISION_SHARE",
        "STATE_UPDATE"
      ]
    },
    "timestamp": { "type": "string", "format": "date-time" },
    "sender": {
      "type": "object",
      "required": ["agent_id", "fingerprint"],
      "properties": {
        "agent_id": { "type": "string" },
        "fingerprint": { "type": "string" },
        "capabilities": { "type": "array", "items": { "type": "string" } },
        "pubkey": { "type": "string" }
      }
    },
    "receiver": {
      "type": "object",
      "required": ["agent_id", "fingerprint"],
      "properties": {
        "agent_id": { "type": "string" },
        "fingerprint": { "type": "string" }
      }
    },
    "trust": {
      "type": "object",
      "properties": {
        "sender_view": { "type": "string" },
        "receiver_view": { "type": "string" }
      }
    },
    "state": {
      "type": "object",
      "properties": {
        "presence": { "type": "string" },
        "lri": { "type": "integer", "minimum": 0, "maximum": 100 },
        "kernel_signals": { "type": "array", "items": { "type": "string" } },
        "intent": { "type": "string" }
      }
    },
    "payload": { "type": "object" },
    "sign": {
      "type": "object",
      "properties": {
        "algo": { "type": "string" },
        "signature": { "type": "string" }
      }
    }
  }
}
